<div class="hero-body">
  <div class="container has-text-centered">
    <div class="columns is-vcentered">
      <div class="column is-5">
        <figure class="image is-4by3">
          <img id="img-generated" src="/assets/img/generated.png" alt="Description">
        </figure>
      </div>
      <div class="column is-6 is-offset-1">
        <h1 class="title is-2">
          Image generation
        </h1>
        <h2 class="subtitle is-4">
          Put some image description to input field and click generate, You can also select image size.
        </h2>
        <br>
        <p class="has-text-centered">
          <input id="img-prompt" class="input is-info" type="text" placeholder="Image description">
        </p>
        <br>
        <p>
        <div class="dropdown">
          <div class="dropdown-trigger">
            <button class="button" aria-haspopup="true" aria-controls="dropdown-menu">
              <span>Size</span>
              <span class="icon is-small">
                <i class="fa fa-angle-down" aria-hidden="true"></i>
              </span>
            </button>
          </div>
          <div class="dropdown-menu" id="dropdown-menu" role="menu">
            <div class="dropdown-content">
              <a class="dropdown-item" value="1">256x256</a>
              <a class="dropdown-item" value="2">512x512</a>
              <a class="dropdown-item is-active" value="3">1024x1024</a>
            </div>
          </div>
        </div>
        </p>
        <br>
        <p>
        <div id="loading" style="display: none;"></div>
        </p>
        <p class="has-text-centered">
          <button id="img-generate" class="button is-info">Generate</button>
        </p>
      </div>
    </div>
  </div>
</div>